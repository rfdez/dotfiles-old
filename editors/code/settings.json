{
  "breadcrumbs.symbolPath": "off",
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "'DankMono Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.lineHeight": 2.1,
  "editor.lightbulb.enabled": false,
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.rulers": [100],
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",
  "editor.renderWhitespace": "all",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.multiCursorLimit": 100000,
  "editor.linkedEditing": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.openEditors.visible": 0,
  "explorer.excludeGitIgnore": false,
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', Hack, Menlo, Monaco, monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.cursorBlinking": true,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": false,
  "workbench.list.horizontalScrolling": true,
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.colorTheme": "Codely Dark",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": false,
  "window.menuBarVisibility": "toggle",
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.alwaysSignOff": true,
  "git.fetchOnPull": true,
  "git.rebaseWhenSync": true,
  "git.showPushSuccessNotification": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true
  },
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "security.workspace.trust.untrustedFiles": "open",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "go.goroot": "/snap/go/current",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "json.schemas": [
    {
      "fileMatch": ["ci.yml"],
      "url": "https://json.schemastore.org/github-workflow"
    },
    {
      "fileMatch": ["docker-compose.*.yml"],
      "url": "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json"
    },
    {
      "fileMatch": [".golangci.yml"],
      "url": "https://json.schemastore.org/golangci-lint.json"
    }
  ],
  "shellcheck.ignorePatterns": {
    "**/.env": true,
    "**/.env.*": true
  },
  "[shellscript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": true
    },
  },
  "[typescript][javascript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": [
      "source.addMissingImports",
      "source.fixAll.eslint"
    ],
  },
  "[css][scss]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    },
  },
  "gitlens.codeLens.enabled": false
}
